<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Tambah Data Contact</h2>

      <% if (typeof errors != 'undefined' && errors.length > 0 ) { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            value="<%= typeof old !== 'undefined' ? old.nama : '' %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= typeof old !== 'undefined' ? old.email : '' %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="nomorHp" class="form-label">Nomor Hp</label>
          <input
            type="text"
            class="form-control"
            id="nomorHp"
            name="nomorHp"
            value="<%= typeof old !== 'undefined' ? old.nomorHp : '' %>"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Tambah Data</button>
      </form>
    </div>
  </div>
</div>
